#!/usr/bin/env bash

GREEN='\033[1;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
NC='\033[0m'

warn() {
    echo "$@" >&2;
}

die() {
    warn "$@"; exit 1;
}

git_is_initialized() {
    git rev-parse --git-dir > /dev/null 2>&1;
}

###############################################################################

# Create a new directory and enter it
mkdir -p "$@" && cd "$@"
