#!/usr/bin/env bash

source /Users/${USER}/dotfiles/shell/.functions

parts=(`echo $(git symbolic-ref -q HEAD) | tr '/' ' '`)

if [ ${#parts[@]} -lt 4 ]; then
    abort "You do not appear to be within a feature branch."
fi

if [ ${parts[2]} != 'feature' ]; then
    abort "You do not appear to be within a feature branch."
fi

git hf feature finish ${parts[3]}
