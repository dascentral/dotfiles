#!/usr/bin/env bash

GREEN='\033[1;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
NC='\033[0m'

if [ ! -e "artisan" ]; then
    echo -e "${YELLOW}You are not in the root of a Laravel application.${NC}"

    exit 1
fi

# Output Laravel routes in an abbreviated format
if [ $# != 1 ]; then
    php artisan route:list --columns=method,uri,name
else
    php artisan route:list --columns=method,uri,name --name=$1
fi
