#!/usr/bin/env bash

source /Users/${USER}/.dotfiles/lib/functions.sh

if [ $# -eq 0 ]; then
    usage "Usage: $0 [file1] [file2] [...]"
fi

for file in "$@"; do
    if [ -e "$file" ]; then
        chflags nohidden "$file"
        echo "File '$file' is no longer hidden."
    else
        echo "File '$file' does not exist."
    fi
done

exit 0
