
#------------------------------------------------------------------------------------------
# General / Utility
#------------------------------------------------------------------------------------------
alias c='clear'
alias clear_ds_store='rm -rf `find . -name '.DS_Store'`'
alias flush_dns='sudo killall -HUP mDNSResponder'
alias fn='find . -name'
alias h='history'
alias hg='history | grep'
alias hosts='sudo vi /etc/hosts'
alias l='ls -al'
alias mc='mc -a -c'
alias size='du -hs ./'
alias sshkey='pbcopy < ~/.ssh/id_rsa.pub'

# Permissions
alias d755='find . -type d -exec chmod 755 {} \;'
alias f644='find . -type f -exec chmod 644 {} \;'

# Directory Switching
alias dev='cd ~/Workspace'
alias dot='cd ~/dotfiles'
alias icloud='cd ~/Library/Mobile\ Documents/com~apple~CloudDocs'

# Aliases
alias ca='cat ~/.aliases'
alias sa='source ~/.aliases'
alias va='vi ~/.aliases'

# Zsh Config
alias cz='cat ~/.zshrc'
alias vz='vi ~/.zshrc'
alias sz='source ~/.zshrc'


#------------------------------------------------------------------------------------------
# Docker
#------------------------------------------------------------------------------------------
alias d='docker'
alias dc='docker-compose'
alias di='docker images'
alias dm='docker-machine'
alias dmfs='docker-compose exec app php artisan migrate:fresh --seed'
alias dmnative='echo "Switching to native docker" && eval $(docker-machine env -u)'
alias dv='docker volume ls'


#------------------------------------------------------------------------------------------
# Git
#------------------------------------------------------------------------------------------
alias ghp="git hf push"
alias ghu="git hf update"
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gs="git status"
alias nah='git reset HEAD --hard'
alias repush='git pull --rebase && git push'


#------------------------------------------------------------------------------------------
# HubFlow
#------------------------------------------------------------------------------------------
alias hff='git hf release finish'


#------------------------------------------------------------------------------------------
# Homebrew
#------------------------------------------------------------------------------------------
alias bsl='brew services list'
alias bsr='brew services restart'


#------------------------------------------------------------------------------------------
# Laravel
#------------------------------------------------------------------------------------------
alias artisan='php artisan'
alias cll='cat storage/logs/laravel.log'
alias dump='php artisan dump-server'
alias dusk='php artisan dusk'
alias mfs='php artisan migrate:fresh --seed'
alias test='php artisan test'
alias tll='tail -f storage/logs/laravel.log'


#------------------------------------------------------------------------------------------
# MySQL
#------------------------------------------------------------------------------------------
alias mysql_start='sudo /usr/local/mysql/support-files/mysql.server start'
alias mysql_stop='sudo /usr/local/mysql/support-files/mysql.server stop'
alias mysql_restart='sudo /usr/local/mysql/support-files/mysql.server restart'


#------------------------------------------------------------------------------------------
# Nginx
#------------------------------------------------------------------------------------------
alias cnge='cat /usr/local/var/log/nginx/error.log'
alias ng='cd /usr/local/etc/nginx'
alias ngbrew='cd /usr/local/Cellar/nginx/1.13.10'
alias nglogs='cd /var/log/nginx'
alias ngrestart='brew services restart nginx'
alias ngstart='brew services start nginx'
alias ngstop='brew services stop nginx'
alias sites='cd /usr/local/etc/nginx/sites-available'
alias tnge='tail -f /usr/local/var/log/nginx/error.log'

# cat /usr/local/var/log/nginx/error.log
# cd /var/log/nginx
# cd /usr/local/Cellar/nginx/1.13.10


#------------------------------------------------------------------------------------------
# NPM
#------------------------------------------------------------------------------------------
alias nrd='npm run dev'
alias nrp='npm run production'
alias nrw='npm run watch'


#------------------------------------------------------------------------------------------
# PHP
#------------------------------------------------------------------------------------------
alias vp='sudo vi /usr/local/etc/php/7.4/php.ini'


#------------------------------------------------------------------------------------------
# VS Code
#------------------------------------------------------------------------------------------
alias oc='code .'
