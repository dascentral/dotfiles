# Laravel Sail
#------------------------------------------------------------------------------------------
alias sail='bash vendor/bin/sail'
alias ci='sail composer install'
alias cu='sail composer update'
alias a='sail artisan'
alias dusk='sail dusk'
alias mfs='sail artisan migrate:fresh --seed'
alias up='sail up'
alias t='sail test --parallel'
alias td='sail test --parallel && sail dusk'


